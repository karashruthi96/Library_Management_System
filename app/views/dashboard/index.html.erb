
<p id="notice"><%= notice %></p>
<strong><h1 class="display-4">USERS</h1></strong>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<div class="container col col-lg">
  <table class="table table-bordered">
    <thead>
    <tr>
      <th scope="col">EMAIL</th>
      <th scope="col">RESET PASSWORD SENT AT</th>
      <th scope="col">REMEMBER CREATED AT</th>
      <th scope="col">CREATED AT</th>
      <th scope="col">UPDATED AT</th>
      <th scope="col">USER TYPE</th>
      <th scope="col">USER NAME</th>
      <th scope="col">LIBRARY ID</th>
      <th scope="col">LIBRARIAN APPROVED</th>
      <th scope="col">EDUCATION LEVEL</th>
      <th scope="col">MAX BORROWAL TIME</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td scope="row"><%= user.email %></td>
        <td><%= user.reset_password_sent_at %></td>
        <td><%= user.remember_created_at %></td>
        <td><%= user.created_at %></td>
        <td><%= user.updated_at %></td>
        <td><%= user.user_type %></td>
        <td><%= user.u_name %></td>
        <td><%= Library.find(user.library_id.to_i).l_name %></td>
        <td><%= user.l_approved %></td>
        <td><%= user.s_education %></td>
        <td><%= user.s_max %></td>
        <td><%= link_to 'Edit', edit_registration_path(user) %></td>
        <td><%= link_to 'Destroy', registration_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

