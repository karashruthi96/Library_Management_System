<p id="notice"><%= notice %></p>

<h1>Libraries</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>NAME</th>
      <th>LOCATION</th>
      <th>MAX BORROWAL PERIOD</th>
      <th>UNIVERSITY</th>
      <th>FINE</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.id %></td>
        <td><%= library.l_name %></td>
        <td><%= library.l_location %></td>
        <td><%= library.l_max_days %></td>
        <td><%= library.l_university %></td>
        <td><%= library.l_fine %></td>
        <td><%= link_to 'Show', library %></td>
        <%if current_user.user_type != 'student' %>
        <td><%= link_to 'Edit', edit_library_path(library) %></td>
        <%end%>
        <%if current_user.user_type == 'admin' %>
        <td><%= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Library', new_library_path %>
